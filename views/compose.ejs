<% include partials/header.ejs %>
  
<div class="container mt-5">
  <h1 class="mb-5">Compose</h1>
  
  <form action="/compose" method="post">
    <div class="form-group">
      <label for="title">Title</label>
      <input class="form-control form-control-lg" type="text" name="title" id="title" placeholder="Enter Title" autofocus>
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      <textarea class="form-control form-control-lg" name="content" id="content" rows="5" placeholder="Your Content"></textarea>
    </div>
    <button class="btn btn-dark btn-lg">Publish</button> 
  </form>

</div>
  
